{
  "name": "kratos-boilerplate",
  "version": "3.1.0",
  "title": "Kratos Boilerplate",
  "description": "A simple boilerplate for creating a static PWA using Webpack, Pug, PostCSS and CSS Modules",
  "homepage": "https://github.com/felipefialho/kratos-boilerplate",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "author": {
    "name": "Felipe Fialho",
    "email": "hi@felipefialho.com",
    "url": "http://www.felipefialho.com"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "deploy": "gh-pages-deploy",
    "analyzer": "npm run build && webpack-bundle-analyzer ./dist/stats.json",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:scss": "sass-lint -c sass-lint.json 'src/**/*.scss' -v -q",
    "lint:js": "eslint ./src/",
    "fix:js": "eslint ./src/ --fix"
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "prep": [
      "build"
    ],
    "noprompt": true
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.9.6",
    "autoprefixer": "^9.7.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.1.0",
    "file-loader": "6.0.0",
    "gh-pages-deploy": "^0.5.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "imagemin-webpack-plugin": "^2.4.2",
    "lost": "^8.3.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "offline-plugin": "^5.0.7",
    "postcss-font-magician": "^2.3.1",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^2.0.0",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "rucksack-css": "^1.0.2",
    "rupture-sass": "^0.3.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-pwa-manifest": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
